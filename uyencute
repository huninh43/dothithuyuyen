<script>
  const MAT_KHAU_DUNG = "mycay123";  // üëà Thay ƒë·ªïi m·∫≠t m√£ ·ªü ƒë√¢y n·∫øu b·∫°n mu·ªën
  const loiChucList = [
    "üçú Ch√∫c m√†y ƒÉn m√¨ cay c·∫•p ƒë·ªô 7 m√† kh√¥ng r∆°i m·ªôt gi·ªçt l·ªá!",
    "üç¢ Xi√™n b·∫©n l√† ƒë·ªânh cao, c≈©ng nh∆∞ t√¨nh b·∫°n t·ª•i m√¨nh!",
    "üçã M·ªôt ly tr√† chanh, m·ªôt t√¨nh b·∫°n chanh s·∫£ k√©o d√†i m√£i m√£i!",
    "üî• T√¨nh b·∫°n c·ªßa t·ª•i m√¨nh n√≥ng nh∆∞ n·ªìi l·∫©u xi√™n cay n·ªìng!",
    "üéâ M·∫≠t m√£ ƒë√∫ng r·ªìi! ƒê√¢y l√† ph·∫ßn th∆∞·ªüng d√†nh cho b·∫°n th√¢n c·ª±c ph·∫©m!"
  ];

  function kiemTra() {
    const pass = document.getElementById("password").value;
    if (pass === MAT_KHAU_DUNG) {
      document.getElementById("unlockBox").style.display = "none";
      document.getElementById("canvas").style.display = "block";
      document.getElementById("loiChuc").style.display = "block";
      document.getElementById("loiChuc").innerText = loiChucList[Math.floor(Math.random() * loiChucList.length)];
      startFireworks();
    } else {
      document.getElementById("thongBao").innerText = "Sai m·∫≠t m√£ r·ªìi b·∫°n iuuu üò¢";
    }
  }

  // Hi·ªáu ·ª©ng ph√°o hoa
  const canvas = document.getElementById('canvas');
  const ctx = canvas.getContext('2d');
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
  const particles = [];

  class Particle {
    constructor(x, y, color, vx, vy) {
      this.x = x;
      this.y = y;
      this.color = color;
      this.vx = vx;
      this.vy = vy;
      this.alpha = 1;
    }

    update() {
      this.x += this.vx;
      this.y += this.vy;
      this.alpha -= 0.01;
    }

    draw() {
      ctx.globalAlpha = this.alpha;
      ctx.fillStyle = this.color;
      ctx.beginPath();
      ctx.arc(this.x, this.y, 3, 0, Math.PI * 2);
      ctx.fill();
    }
  }

  function firework() {
    const x = Math.random() * canvas.width;
    const y = Math.random() * canvas.height / 2;
    const colors = ['#f00', '#0f0', '#00f', '#ff0', '#f0f', '#0ff', '#fff'];

    for (let i = 0; i < 50; i++) {
      const angle = Math.random() * 2 * Math.PI;
      const speed = Math.random() * 4;
      const vx = Math.cos(angle) * speed;
      const vy = Math.sin(angle) * speed;
      particles.push(new Particle(x, y, colors[Math.floor(Math.random() * colors.length)], vx, vy));
    }
  }

  function animate() {
    ctx.fillStyle = "rgba(0, 0, 0, 0.2)";
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    particles.forEach((p, i) => {
      p.update();
      p.draw();
      if (p.alpha <= 0) particles.splice(i, 1);
    });

    requestAnimationFrame(animate);
  }

  function startFireworks() {
    setInterval(firework, 1000);
    animate();
  }
</script>

